.navbar.navbar-default
	.container
		.navbar-header
			= link_to '#Tsubuyaki', root_url, class: "navbar-brand"
		- if logged_in?
			%ul.nav.navbar-nav
				%li= link_to "全ツイート一覧", tweets_path
				%li= link_to "ユーザー一覧", users_path
			%ul.nav.navbar-nav.navbar-right
				%li= link_to current_user.name, current_user
				%li= link_to "設定", edit_setting_path(current_user.id)
				%li= link_to "ログアウト", session_path(current_user.id), method: :delete
		-	else
			%ul.nav.navbar-nav.navbar-right
				%li= link_to "会員登録", new_registration_path
				%li= link_to "ログイン", new_session_path